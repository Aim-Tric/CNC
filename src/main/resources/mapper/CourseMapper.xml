<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="persistent.dao.course.CourseDAO">
    <select id="findCourses" resultType="java.util.List">
        select * from course
    </select>
    <select id="findCourse" resultType="persistent.pojo.course.Course">
        select * from course
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="id != 0">
                AND id = #{id}
            </if>
            <if test="name != null">
                AND name = #{name}
            </if>
            <if test="teaid != 0">
                AND teaid = #{teaid}
            </if>
            <if test="overview != null">
                AND overview = #{overview}
            </if>
            <if test="sourse != null">
                AND sourse = #{sourse}
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="imageview">
                AND imageview = #{imageview}
            </if>
        </trim>
    </select>
    <insert id="insertCourse" parameterType="persistent.pojo.course.Course">
        insert into course
        <trim prefix=" (" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="teaid != 0">teaid,</if>
            <if test="type != null">type,</if>
            <if test="overview != null">overview,</if>
            <if test="sourse != null">sourse,</if>
            <if test="imageview != null">imageview</if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="teaid != 0">#{teaid},</if>
            <if test="type != null">#{type},</if>
            <if test="overview != null">#{overview},</if>
            <if test="sourse != null">#{sourse},</if>
            <if test="imageview != null">#{imageview},</if>
        </trim>
    </insert>

    <update id="updateCourse">
        update course
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="type != null">type = #{type},</if>
            <if test="overview != null">overview = #{overview},</if>
            <if test="sourse != null">sourse = #{sourse},</if>
            <if test="imageview != null">imageview = #{imageview},</if>
        </trim>
        where teaid = #{teaid}
    </update>

</mapper>